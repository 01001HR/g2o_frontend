OBJS = 	pwn_cloud.o \
	pwn_solve.o \
	pwn_normals.o

CPPFLAGS = -I/usr/include/eigen3
CXXFLAGS = -O3

all: fava $(OBJS)

.phony:	clean all


%.o : %.cpp %.h
	$(CXX) -o $@ -c $(CPPFLAGS) $(CXXFLAGS) $<

fava:	$(OBJS) main.cpp
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(OBJS) main.cpp -o fava

clean:
	rm -f *~ *.o